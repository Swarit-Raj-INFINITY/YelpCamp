<% layout("./layout/boilerplate") %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
        <label for=" title">Title</label>
        <input type="text" name="title" id="title" value="<%= camp.title %>">
        <br>
        <label for="location">Location</label>
        <input type="text" name="location" id="location" value="<%= camp.location %>">
        <br>
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="<%= camp.price %>">
        <br>
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10"><%= camp.description %></textarea>
        <br>
        <button type="submit">Submit</button>
    </form>